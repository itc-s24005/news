datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  email     String  @unique
  name      String?
  avatarUrl String? @map("avatar_url")

  accounts Account[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  settings UserSettings?


  @@map("User")
}

model UserSettings {
  id     String @id @default(uuid()) @db.Uuid
  userId String @unique @map("user_id")

  theme        String  @default("light")
  showWeather  Boolean @default(true) @map("show_weather")
  showCalendar Boolean @default(true) @map("show_calendar")
  showGmail    Boolean @default(true) @map("show_gmail")
  showNews     Boolean @default(true) @map("show_news")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("UserSettings")
}

model Account {
  id             String @id @default(uuid())
  provider       String
  providerUserId String @map("provider_user_id")

  accessToken  String  @map("access_token")
  refreshToken String? @map("refresh_token")
  expiresAt    Int     @map("expires_at")
  scope        String?

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  @@unique([provider, providerUserId], name: "account_provider_user_unique")
  @@map("Account")
}

